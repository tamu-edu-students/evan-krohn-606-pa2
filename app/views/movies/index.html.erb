<p style="color: green"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <th>Title</th><th>Rating</th><th>Description</th><th>Release date</th><th>Options</th>
  </thead>
  <tbody>
  <% @movies.each do |movie| %>
    <tr>
    <%= render movie %>
    <td>
      <%= link_to "Show this movie", movie %>
    </td>
    </tr>
  <% end %>
  </tbody>
  <tfoot>
  <th>Title</th><th>Rating</th><th>Description</th><th>Release date</th><th>Options</th>
  </tfoot>
</table>

<%= link_to "New movie", new_movie_path %>
